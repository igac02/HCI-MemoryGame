<Window x:Class="MemoryGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Memory Game" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Window.Resources>
        <!-- Stil za dugmad -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="4" BlurRadius="6" Color="Black" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}" RadiusX="5" RadiusY="5" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil za tekst -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Pozadina sa gradijentom -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB74D" Offset="0.0" />
                <GradientStop Color="#F57C00" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Tema dugmad -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button x:Name="AnimalsButton" Content="Životinje" Width="120" Height="40" Click="AnimalsButton_Click"/>
            <Button x:Name="CitiesButton" Content="Gradovi" Width="120" Height="40" Click="CitiesButton_Click"/>
            <Button x:Name="ObjectsButton" Content="Predmeti" Width="120" Height="40" Click="ObjectsButton_Click"/>
            <Button x:Name="NumbersButton" Content="Brojevi" Width="120" Height="40" Click="NumbersButton_Click"/>
            <Button x:Name="FruitsButton" Content="Voće i povrće" Width="120" Height="40" Click="FruitsButton_Click"/>
            <Button x:Name="RandomButton" Content="Nasumično" Width="120" Height="40" Click="RandomButton_Click"/>
        </StackPanel>

        <!-- Tekstualni status -->
        <TextBlock x:Name="StatusText" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="24" FontWeight="Bold" TextAlignment="Center" />

        <!-- Tekstualni unos -->
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                 Width="300" Height="40" Margin="0,0,0,120" IsEnabled="False" Visibility="Hidden"
                 FontSize="16" KeyDown="InputTextBox_KeyDown"
                 Background="White" Foreground="Black" BorderBrush="DarkGray" />

        <!-- Dugme za potvrdu -->
        <Button x:Name="SubmitButton" Content="Potvrdi" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Width="100" Height="40" Margin="0,0,0,60" IsEnabled="False" Visibility="Hidden" Click="SubmitButton_Click"/>

        <!-- Dugme za restartovanje -->
        <Button x:Name="RestartButton" Content="Ponovi" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Width="100" Height="40" Margin="0,0,0,100" Visibility="Hidden" Click="RestartButton_Click"/>

        <Button x:Name="StartGameButton" Content="Pokreni igru" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                 Width="150" Height="40" Margin="0,0,0,100" Visibility="Hidden" Click="StartGameButton_Click"/>

    </Grid>
</Window>
